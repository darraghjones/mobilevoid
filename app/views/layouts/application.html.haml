!!!
%html
  %head
    %title Mobilevoid
    /=stylesheet_link_tag :all
    =javascript_include_tag 'jquery', 'jquery.jplayer.min', 'rails', 'application'
    =stylesheet_link_tag :all
  
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/screen.css", :type => "text/css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/print.css", :type => "text/css", :media => "print"}
  
    /[if lt IE 8]
      %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/ie.css", :type => "text/css", :media => "screen, projection"}

    =yield :head
  
    =csrf_meta_tag 
  
  %body
    .container
      %header.span-24.last
        .span-3
          %h1
            %a{:href => "/"}Home
        #account.span-14
          -if signed_in?
            =current_user.mobile
            =link_to "Sign out", signout_path(:redirect_url => request.path), :method => :delete
          -else
            =form_for(:session, :url => sessions_path) do
              =hidden_field_tag(:redirect_url, request.path)
              =label_tag(:mobile, "Mobile: ")
              =text_field_tag(:mobile)
              =label_tag(:password, "Password: ")
              =password_field_tag(:password)
              =submit_tag("Login")
            =link_to("Sign-up", signup_path)
        #search.span-7.last
          =form_tag(search_path, :method => "get") do 
            =label_tag(:pattern, "Search:")
            =text_field_tag(:pattern)
            =submit_tag("Search")
          =link_to("Power Search", search_path) 
      .span-24.last
        -flash.each do |key, value|
          %div{:class => "flash #{key}"}=value
      =yield
      %footer.span-24.last
        %p
          Page generated in #{@time_taken} at #{Time.now}
          =@time_take
          &copy; Copyright me!

